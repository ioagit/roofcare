extends ../includes/layout

block header
    include ../includes/currentUser
    header
        nav.navbar.navbar-default
            a.navbar-brand(href='home.html')
                | Roofcare Mobil
            a.toggle-nav.btn.pull-left(href='#')
                i.icon-reorder
            div(ng-include="'/partials/account/header-login'")
        div#wrapper
            #main-nav-bg
            nav#main-nav
                .navigation
                    ul.nav.nav-stacked
                        li.active
                            a(href='/roofer/dashboard')
                                i.icon-dashboard
                                span Home
                        li
                            a(href='/roofer/inbox')
                                i.icon-edit
                                span Inbox
                        li
                            a(href='/roofer/jobs')
                                i.icon-calendar
                                span Jobs
                        li
                            a(href='/roofer/kunden')
                                i.icon-envelope
                                span Kunden
                        li
                            a(href='/roofer/rechnung')
                                i.icon-money
                                span Rechnung

block content
    section#content(data-ng-controller="shell as vm")
        div.container
            div.page-splash.dissolve-animation(data-ng-show="vm.isBusy")
                div(data-cc-spinner="vm.spinnerOptions")
                div.page-splash-message.page-splash-message-subtle {{vm.busyMessage}}
            #content-wrapper.row
                ng-view.shuffle-animation
            footer#footer
                .footer-wrapper
                    .row
                        .col-sm-6.text
                            | Copyright Â© 2013 Roofcare Mobil
                        .col-sm-6.buttons
        // / jquery [required]

block scripts
    //account module
    script(defer, src='/static/dist/roofcare.min.js')


